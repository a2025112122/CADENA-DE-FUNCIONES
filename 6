// quitar vocales a texto
#include<iostream>
#include<string>
using namespace std;

int main(){
string texto;
cout<<"ingrese su texto: "<<endl;
getline(cin,texto);
for (int i = texto.length() - 1; i >= 0; i--) { //de atras para adelante,
char c = tolower(texto[i]);
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            texto.erase(i, 1);
        }
}
cout<< "el texto sin vocales es:"<< texto<<endl;
return 0;
}
