#include <iostream>
#include <string>
using namespace std;


void leerTexto(string &text) {
    cout << "Introduce un texto: ";
    getline(cin, text);
}

string eliminar(string &texto) {
    for(int i=texto.size()-1;i>=0;i--){
     char c=tolower(texto[i]);
     if(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'){
         texto.erase(i,1);
     }
    }
    return texto;
}

void mostrarTexto(string & inv) {
    cout <<"el texto sin vocal, es:  "<<inv<<endl;
}



int main() {
    string texto;
    leerTexto(texto);
    string siv=eliminar(texto);
    mostrarTexto(siv);
    return 0;
}
