#include <iostream>
#include<string>
using namespace std;

void leertexto(string &text);
void mostrar(const string & original, const string & mayus);
string convertirMayus(const string & text);


int main(){
string texto;
string textoMayus;
leertexto(texto);
textoMayus=convertirMayus(texto);
mostrar(texto,textoMayus);

return 0;
}

void leertexto(string &text){
cout<<"ingrese un texto: "<<endl;
getline(cin,text);

}
string convertirMayus(const string & text){
    string resultado=text;
for (size_t i=0; i<resultado.size();i++){ //size_t para que pueda saber el tamaÃ±o del texto
    resultado[i]=toupper(resultado[i]);
}
return resultado;
}

void mostrar(const string & original, const string & mayus){
cout<< "texto original:"<<original<<endl;
cout<<"texto en mayuscula:"<<mayus<< endl;
}
